{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ES6",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["DOM", "ES5", "ES6", "ES2015"],
		"strict": true,
		"noImplicitAny": true,
		"outDir": "./dist",
		"sourceMap": true,
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"]
}
